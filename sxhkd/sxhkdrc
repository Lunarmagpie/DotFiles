#
# wm independent hotkeys
#

# terminal emulator
super + shift + Return
	alacritty

# program launcher
super + slash
	rofi -show combi

#calculator
super + period
	rofi -show calc -modi calc -no-show-match -no-sort

# Maim Screenshots
# Select
super+shift+Print
	maim -s | xclip -selection clipboard -t image/png
# # Window
super+Print
	 .config/sxhkd/maimmonitorshot.sh
# # Full Screen
Print 
	maim | xclip -selection clipboard -t image/png

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#Volume
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + Return
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,~pseudo_tiled,~floating,~fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#


# focus the node in the given direction
super + {Left,Right,Up,Down}
	bspc config pointer_follows_focus true; \
	set dir {west,east,north,south}; \
	if [ (bspc query -N -d $desk -n .leaf | wc -l) = 0 ]; \
		bspc monitor $dir -f; \
	else; \
		bspc query -N @$dir; \
		if [ $status = 1 ]; \
			echo $dir; \
			bspc monitor $dir -f; \
		else; \
			echo "not 1"; \
			bspc node $dir -f; \
		end; \
	end; \
	bspc config pointer_follows_focus false

# Move in a certain direction
super + shift + {Left,Right,Up,Down}
	bspc config pointer_follows_focus true; \
	set dir {west,east,north,south}; bspc query -N @$dir && bspc node -s $dir || bspc node -m  $dir -f; \
	bspc config pointer_follows_focus false

# Rotate tree
super + shift + {d,a}
     bspc node @/ -R {90,-90}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc config pointer_follows_focus true; \
	bspc node -f @{parent,brother,first,second}; \
	bspc config pointer_follows_focus false

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc config pointer_follows_focus true; \
	bspc node -f {next,prev}.local.!hidden.window; \
	bspc config pointer_follows_focus false

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# switch workspace to the next/previous desktop in the current monitor
super + shift + bracket{left,right}
	bspc node -d {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc config pointer_follows_focus true; \
	bspc {node,desktop} -f last; \
	bspc config pointer_follows_focus false

# focus the older or newer node in the focus history
super + {o,i}
	bspc config pointer_follows_focus true; \
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on; \
	bspc config pointer_follows_focus false

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc config pointer_follows_focus true; \
	bspc {desktop -f,node -d} '^{1-9,10}'; \
	bspc config pointer_follows_focus false

#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Right,Up,Down,Left}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
